import fetch from 'node-fetch';

export default async function handler(req, res) {
    if (req.method !== 'POST') {
        return res.status(405).json({ error: 'Method not allowed' });
    }

    try {
        const { appstate } = req.body;

        if (!appstate) {
            return res.status(400).json({ error: 'AppState required' });
        }

        // Validate session first
        const isValid = await testSessionValidity(appstate);
        if (!isValid) {
            return res.status(401).json({ 
                success: false, 
                error: 'Session expired' 
            });
        }

        const groups = await fetchUserGroupsReal(appstate);

        return res.status(200).json({
            success: true,
            groups: groups
        });

    } catch (error) {
        return res.status(500).json({ 
            success: false, 
            error: error.message 
        });
    }
}

async function fetchUserGroupsReal(appstate) {
    const cookieString = appstate.map(c => `${c.name}=${c.value}`).join('; ');

    try {
        const response = await fetch('https://graph.facebook.com/me/groups?fields=id,name,member_count,privacy&limit=100', {
            headers: {
                'Cookie': cookieString,
                'User-Agent': 'Mozilla/5.0 (iPhone; CPU iPhone OS 14_0 like Mac OS X) AppleWebKit/605.1.15',
                'Accept': 'application/json'
            },
            timeout: 10000
        });

        if (response.ok) {
            const data = await response.json();
            return data.data || [];
        }

        // If API fails, return empty array
        return [];

    } catch (error) {
        console.log('Groups fetch error:', error.message);
        return [];
    }
}

async function testSessionValidity(appstate) {
    const cookieString = appstate.map(c => `${c.name}=${c.value}`).join('; ');

    try {
        const response = await fetch('https://graph.facebook.com/me?fields=id', {
            headers: { 
                'Cookie': cookieString,
                'Accept': 'application/json'
            }
        });
        return response.ok;
    } catch {
        return false;
    }
}